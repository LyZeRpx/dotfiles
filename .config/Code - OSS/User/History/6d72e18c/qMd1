## MAKEFILE
## File description:
## FILEMAKE
##

CC ?= gcc

RM = rm

SRC 	=	src/main.c 							\
			src/builtin_setenv.c				\
			src/builtin_unsetenv.c				\
			src/check_env.c						\
			src/execute_cmd.c					\
			src/find_path_and_exec.c			\
			src/display_path.c					\
			src/minishell1.c					\
			src/check_builtins.c				\
			src/builtin_cd.c					\
			src/check_command.c					\

NAME	= mysh

VPATH = ./include

CFLAGS = -Wall -Wextra -W

CPPFLAGS = -iquote $(VPATH)

LDFLAGS = -L./libstr -lstr

OBJ	= $(SRC:.c=.o)

all:	$(NAME)

$(NAME): $(OBJ)
	make -C ./libstr
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ) $(LDFLAGS)

clean:
	make clean -C ./libstr
	$(RM) -f $(OBJ)

fclean: clean
	make fclean -C ./libstr
	$(RM) -f $(NAME)

re: fclean all

debug: CFLAGS += -g3
debug: re

.PHONY: all clean fclean re debug \
