## MAKEFILE
## File description:
## FILEMAKE
##

CC ?= gcc

AR ?= ar

RM = rm

SRC 	=	src/main.c 		\

NAME = output

VPATH = ./headers

CPPFLAGS = -iquote $(VPATH) -Wall -Wextra -Wno-unused-variable

LDFLAGS = -L./lib/sublib -lputstr

OBJ	= $(SRC:.c=.o)

all:	$(NAME)

$(NAME): $(OBJ)
	make -C lib/
	$(CC) $(CPPFLAGS) -o $(NAME) $(OBJ) $(LDFLAGS)

clean:
	make clean -C lib/
	$(RM) -f $(OBJ)

fclean: clean
	make fclean -C lib/
	$(RM) -f $(NAME)

re: fclean all

debug: CFLAGS += -g3
debug: re

.PHONY: all clean fclean re debug \
