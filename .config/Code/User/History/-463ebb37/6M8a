## MAKEFILE
## File description:
## FILEMAKE
##

CC ?= gcc

AR ?= ar

RM = rm

SRC 	=	main/main.c 							\
			src/loop.c								\

NAME = ai

VPATH = ./headers

CPPFLAGS = -iquote $(VPATH)

CFLAGS = -Wall -Wextra

OBJ	= $(SRC:.c=.o)

all:	$(NAME)

$(NAME): $(OBJ)
	make -C libraries/metamorph_lib
	make -C libraries/my_libc
	$(CC) $(CFLAGS) $(CPPFLAGS) -o $(NAME) $(OBJ) $(LDFLAGS)

clean:
	make clean -C libraries/metamorph_lib
	make clean -C libraries/my_libc
	$(RM) -f $(OBJ)

fclean: clean
	make fclean -C libraries/metamorph_lib
	make fclean -C libraries/my_libc
	$(RM) -f $(NAME)

re: fclean all

debug: CFLAGS += -g3
debug: re

.PHONY: all clean fclean re debug \
